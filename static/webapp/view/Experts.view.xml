<mvc:View controllerName="fokin.crypto.controller.Experts"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m">
	<Page title="Experts" showNavButton="true" navButtonPress=".onNavBack">
		<content>
			<Table id="experts"
				items="{
					model: 'data',
					path: '/Experts',
					parameters: {
						'$select': 'marketDataId,strategyId'
					}
				}"
				growingThreshold="100"
				itemPress=".onItemPress"
				inset="false">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="Experts"/>
							<ToolbarSpacer/>
							<Button icon="sap-icon://add" press=".onAddPress"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Symbol"/>
					</Column>
					<Column>
						<Text text="Period"/>
					</Column>
					<Column>
						<Text text="Strategy"/>
					</Column>
					<Column>
						<Text text="Last update"/>
					</Column>
					<Column>
						<Text text="Advice"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Text text="{data>MarketData/asset}{data>MarketData/currency}"/>
							<Text text="{data>MarketData/period}"/>
							<Text text="{data>Strategy/name}"/>
							<Text text="{data>lastUpdate}"/>
							<Text text="{= ${data>advice} === '1' ? 'Buy' : (${data>advice} === '-1' ? 'Sell' : 'Hold')}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>			
		</content>
	</Page>
</mvc:View>

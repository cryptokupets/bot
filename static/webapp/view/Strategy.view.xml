<mvc:View controllerName="fokin.crypto.controller.Strategy"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:codeeditor="sap.ui.codeeditor"
	height="100%">
	<Page title="Strategy" showNavButton="true" navButtonPress=".onNavBack">
		<content>
			<l:ResponsiveSplitter defaultPane="default">
				<l:PaneContainer>
					<l:SplitPane id="default">
						<codeeditor:CodeEditor editable="true" value="{data>code}" height="100%"/>
					</l:SplitPane>
					<l:SplitPane>
						<Table id="backtests"
							items="{
								model: 'data',
								path: 'Backtests'
							}"
							itemPress=".onBacktestPress"
							inset="false">
							<headerToolbar>
								<Toolbar>
									<Title text="Backtest"/>
									<ToolbarSpacer />
									<Button icon="sap-icon://add" press=".onAddBacktestPress"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column>
									<Text text="Symbol"/>
								</Column>
								<Column>
									<Text text="Period"/>
								</Column>
								<Column>
									<Text text="Duration"/>
								</Column>
								<Column>
									<Text text="Price change"/>
								</Column>
								<Column>
									<Text text="Profit"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Active">
									<cells>
										<Text text="{data>asset}{data>currency}"/>
										<Text text="{data>period}"/>
										<Text text="{data>duration}"/>
										<ObjectNumber
											number="{ path: 'data>priceChange',
												type: 'sap.ui.model.type.Float',
												formatOptions: {
													minFractionDigits: 3,
													maxFractionDigits: 3
												}
											}"
											unit="%"/>
										<ObjectNumber
											number="{ path: 'data>balanceChange',
												type: 'sap.ui.model.type.Float',
												formatOptions: {
													minFractionDigits: 3,
													maxFractionDigits: 3
												}
											}"
											unit="%"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</l:SplitPane>
				</l:PaneContainer>
			</l:ResponsiveSplitter>
		</content>
	</Page>
</mvc:View>
